<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{singlePost.user.name}}!</h2>
    </div>
</div>
<section class="card m-2">
    <header class="d-flex justify-content-between align-items-center p-2 bg-body-secondary">
        <h3>Edit Blog</h3>
        <p></p>
    </header>
    <form class="card-body blog-form">
        <div class="mb-3">
            <label for="title" class="form-label">Blog Title:</label>
            <input class="form-control" name="title" id="title" data-post-id="{{singlePost.id}}" value="{{singlePost.title}}"></input>
        </div>
        <div class="mb-3">
            <label for="text" class="form-label">Blog Text:</label>
            <textarea class="form-control" name="text" id="text" rows="20">{{singlePost.text}}</textarea>
        </div>
        <div class="d-grid mb-3">
            <button type="button" class="btn btn-secondary mb-3" id="submit">Submit</button>
            <button type="button" class="btn btn-secondary mb-3" id="delete">Delete</button>
            <button type="button" class="btn btn-secondary mb-3" id="cancel">Cancel</button>
        </div>
    </form>
</section>

<script src="/js/editblogpost.js"></script>
